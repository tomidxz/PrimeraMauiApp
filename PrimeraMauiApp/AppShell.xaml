<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PrimeraMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PrimeraMauiApp"
    xmlns:pages="clr-namespace:PrimeraMauiApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Nuestra Primera App MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Libros"
    ContentTemplate="{DataTemplate pages:LibrosPage}"
    Route="LibrosPage" />

</Shell>
